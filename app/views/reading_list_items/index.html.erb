<% title "Reading List" %>

<%= content_for :page_meta do %>
  <!-- specifies where the URL routes to. Here, the route goes to '/readinglist' -->
  <link rel="canonical" href="https://dev.to/readinglist" />
  <!-- meta names describe the content of the page and provide information about things like description and keywords, used for SEO -->
  <meta name="description" content="Notifications inbox for dev.to">
  <meta name="keywords" content="software development,engineering,rails,javascript,ruby">

  <!-- meta properties provide more informationa bout page content -->
  <meta property="og:type" content="article" />
  <meta property="og:url" content="https://dev.to/readinglist" />
  <meta property="og:title" content="Reading List - <%= community_qualified_name %>" />
  <meta property="og:description" content="My Saved Posts on dev.to" />
  <meta property="og:site_name" content="The Practical Dev" />

  <!-- provides more information about the twitter section -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@ThePracticalDev">
  <meta name="twitter:title" content="Reading List - <%= community_qualified_name %>">
  <meta name="twitter:description" content="Reading List for dev.to">
<% end %>

<div class="home">
  <!-- this specifies that this div contains the reading list for a user. It displays a reading list based on the current user (knows it's the current user because it's based on the secured algolia key for that user. Also show whether article is archived or valid based on params[:view]) -->
  <div class="item-list-container" id="reading-list" data-algolia-key="<%= @secured_algolia_key %>" data-view="<%= @view %>">
  </div>
</div>
<!-- creates a script tag that references the named pack file, as compiled by webpack per the entries list in config/webpack/shared.js -->
<!-- we use the javascript_pack_tag to include the webpacker packs in our layout files -->
<!-- you can link the JavaScript pack in Rails views using the javascript_pack_tag helper -->
<%= javascript_pack_tag "readingList", defer: true %>
